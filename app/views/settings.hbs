{{> mainmenu _id="settings" }}

<section class="ui inverted grey segment">
<section class="ui yellow raised segment">
    <div class="ui grid">
        <aside class="ui six wide column">
            <img src="images/homer2.png" class="ui medium image">
        </aside>

        <div class="ui ten wide column">
            <div class="ui raised fluid form segment">
                <form action="/settings" method="POST">
                    <h2 class="ui red center aligned header">Update Your Setting Now!!</h2>

                    <div class="two fields">
                        <div class="field">
                            <label>First Name</label>
                            <div class="ui icon input">
                                <input placeholder="First Name" type="text" name="firstName" required>
                                <i class="user icon"></i>
                            </div>
                        </div>
                        <div class="field">
                            <label>Last Name</label>
                            <div class="ui icon input">
                                <input placeholder="Last Name" type="text" name="lastName" required>
                                <i class="user icon"></i>
                            </div>
                        </div>
                    </div>

                    <div class="two fields">
                        <div class="field">
                            <label>Email</label>
                            <div class="ui icon input">
                                <input placeholder="Email" type="text" name="email" required>
                                <i class="mail icon"></i>
                            </div>
                        </div>
                        <div class="field">
                            <label>Password</label>
                            <div class="ui icon input">
                                <input type="password" name="password" required>
                                <i class="lock icon"></i>
                            </div>
                        </div>
                    </div>

                    <button class="ui animated fade blue submit button">
                        <div class="visible content"><i class="upload icon"></i>Update</div>
                        <div class="hidden content">Click to Save</div>
                    </button>

                </form>
            </div>
        </div>
    </div>
</section>
</section>